            { type: "Truth", text: "Have you ever had a dream about anyone in this room?" },
            { type: "Dare", text: "Let the group scroll through your camera roll for 30 seconds." }
        ];

        const level2 = [
            { type: "Action", text: "Blindfold time. You must identify a body part a player offers you to touch using only your lips." },
            { type: "Truth", text: "What is a specific scene from a movie or book that inspired a fantasy of yours?" },
            { type: "Dare", text: "Run an ice cube down the neck of the person to your right. Don't let it drip." },
            { type: "Action", text: "Let the person across from you position your arms and legs however they want. Hold it for 2 rounds." },
            { type: "Dare", text: "Give the person to your left a massage using only your forearms." },
            { type: "Action", text: "Sit on the lap of the person to your right for the next three questions." }
        ];

