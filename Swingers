            { type: "Dare", text: "Remove one article of clothing chosen by the group." },
            { type: "Challenge", text: "The Audition. Perform a 30-second striptease to a song chosen by the group." },
            { type: "Extreme", text: "3 Minutes in Heaven. Go into a closet with a player chosen by the dice. What happens stays there." }
        ];

        /* --- THE LOGIC --- */
        function nextCard() {
            const level = document.getElementById('levelSelect').value;
            let deck;

            // Select the deck based on dropdown
            if (level === "1") deck = level1;
            else if (level === "2") deck = level2;
            else deck = level3;

            // Pick random card
            const randomIndex = Math.floor(Math.random() * deck.length);
            const card = deck[randomIndex];

            // Update UI with animation effect
            const cardElement = document.getElementById('gameCard');
            
            // Simple "pop" animation
            cardElement.style.transform = "scale(0.95)";
            setTimeout(() => {
                document.getElementById('cardType').innerText = card.type;
                document.getElementById('cardText').innerText = card.text;
                cardElement.style.transform = "scale(1)";
            }, 100);
        }
    </script>
